@model ILoginPost
@{
    string error = string.IsNullOrEmpty(ViewBag.Error) ? "" : ViewBag.Error;
}
<form asp-controller="Auth" asp-action="Login" method="post" class="Login">
    <div class="alert alert-warning">
        使用者登入
    </div>
    <div class="form-group">
        <div class="form-floating mb-3">
            <input asp-for="Account" class="form-control" id="account" placeholder="123" autocomplete="off">
            <label for="pmNo">帳號</label>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Password" class="form-control" id="password" placeholder="456" autocomplete="off" type="password">
            <label for="pmTwName">密碼</label>
        </div>
        <div class="mb-3">
            <label class="FontRed">@error</label>
        </div>
        <button asp-controller="Auth" asp-action="Login" class="btn btn-outline-success" id="btnSub">登入</button>
    </div>
</form>